{
  "name": "time-tracker-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:desktop": "npm run dev --workspace=apps/desktop",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:desktop": "npm run build --workspace=apps/desktop",
    "prisma:generate": "npm run prisma:generate --workspace=apps/backend",
    "prisma:migrate": "npm run prisma:migrate --workspace=apps/backend",
    "prisma:studio": "npm run prisma:studio --workspace=apps/backend"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
